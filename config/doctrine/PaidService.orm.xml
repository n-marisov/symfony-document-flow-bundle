<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://symfony.com/schema/dic/doctrine/doctrine-1.0.xsd">

    <!-- Реализует сущность оказанной услуги -->
    <entity name="Maris\Symfony\DocumentFlow\Entity\PaidService" table="paid_services" >

        <id name="id" type="integer" column="id">
            <generator/>
            <options>
                <option name="unsigned">true</option>
            </options>
        </id>
        
        <!-- Основание для оплаты -->
        <field name="basis" type="text" />

        <!-- Количество оказанных услуг -->
        <field name="quantity" type="integer" >
            <options>
                <option name="unsigned">true</option>
            </options>
        </field>

        <!-- Название единицы услуги -->
        <field name="unit"/>

        <!-- Цена за единицу услуги -->
        <embedded name="price" class="Money\Money" />

        <!-- Акт выполненных работ -->
        <many-to-one field="certificate" target-entity="Maris\Symfony\DocumentFlow\Entity\AcceptanceCertificate">
            <join-columns>
                <join-column name="certificate_id" />
            </join-columns>
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </many-to-one>

        <!-- Счет на оплату -->
        <many-to-one field="certificate" target-entity="Maris\Symfony\DocumentFlow\Entity\PaymentInvoice">
            <join-columns>
                <join-column name="invoice_id" />
            </join-columns>
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </many-to-one>

    </entity>

</doctrine-mapping>